@model NSCSC.Shared.Models.ClientSite.MyStoreAndBusiness.ProductUserModels
<div id="modalfunctionInfo_@Model.AssetID" class="modal fade modalfunctionInfo" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="padding:20px 15px;background-color: #f9f9f9">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="myModalLabel2" style="text-align: left; font-weight:bolder">Advanced Information</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <h4>Product key can be applied on @string.Format("{0}", Model.NumberOfUnit == -1 ? "unlimited" : Model.NumberOfUnit.ToString()) Devices</h4>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable-responsive-list-function"
                               class="table table-striped table-bordered dt-responsive nowrap table table-striped jambo_table bulk_action"
                               cellspacing="0" style="width:100%;">
                            <thead style="background-color:#06588C; color:#fff;">
                                <tr>
                                    <th>List of functions</th>
                                </tr>
                            </thead>
                            <tbody id="list-item-hardwares-and-services">
                                @if (Model.ListFunction != null && Model.ListFunction.Any())
                                {
                                    foreach (var item in Model.ListFunction)
                                    {
                                        <tr>
                                            <td>@item.FunctionName</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
