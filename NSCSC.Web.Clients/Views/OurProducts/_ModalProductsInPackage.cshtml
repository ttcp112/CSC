@model NSCSC.Shared.Models.ClientSite.OurProDucts.OurProDuctsModel
<div id="modalProductsInPackage_@Model.ID" class="modal fade modalProductsInPackage" tabindex="-1" role="dialog" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="padding:20px 15px;background-color: #f9f9f9">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="myModalLabel2" style="text-align: center; font-weight:bolder">Advanced Information</h4>
            </div>
            <div class="modal-body">
                @foreach (var item in Model.ListProductChild)
                {
                    <div class="row">
                        <div class="col-md-3 col-sm-3 col-xs-12">
                            <div class="clsImage" style="width:100%">
                                <img src="@item.ImageURL" width="100" height="100" />
                            </div>
                        </div>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <h4 class="fontBold">@item.Name</h4>
                            <h5 class="text-success-02 fontBold">@item.sUnlimitedAmountOfUnit</h5>
                            <h5>@item.sUnlimitedNumberOfAccount</h5>
                            <h5>Functions: @item.sFullFunction</h5>
                        </div>
                    </div>
                    <hr style="margin-top:10px; margin-bottom:10px;" />
                }
            </div>
        </div>
    </div>
</div>
