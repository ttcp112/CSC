@model NSCSC.Shared.Models.ClientSite.OurProDucts.OurProDuctsModel
<div id="modalfunctionInfo_@Model.ID" class="modal fade modalfunctionInfo" tabindex="-1" role="dialog" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="padding:20px 15px;background-color: #f9f9f9">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="myModalLabel2" style="text-align: center; font-weight:bolder">Advanced Information</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <h4 class="text-success-02">@Model.sUnlimitedAmountOfUnit</h4>
                    </div>
                </div>
                <hr style="margin:0px;" />
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <h4>@Model.sUnlimitedNumberOfAccount</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable-responsive-list-devicesmanagement"
                               class="table table-striped table-bordered dt-responsive nowrap table table-striped jambo_table bulk_action"
                               cellspacing="0" style="width:100%;">
                            <thead style="background-color:#e6e6e6;">
                                <tr>
                                    <th>List of functions</th>
                                </tr>
                            </thead>
                            <tbody id="list-item-hardwares-and-services">
                                @if (Model.ListFunction != null && Model.ListFunction.Any())
                                {
                                    foreach (var item in Model.ListFunction)
                                    {
                                        <tr>
                                            <td>@item.FunctionName</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
