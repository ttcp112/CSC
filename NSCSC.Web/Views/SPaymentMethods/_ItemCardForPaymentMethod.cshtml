@{
    Layout = null;
}
@using NSCSC.Shared
@model NSCSC.Shared.Models.Settings.PaymentMethods.PaymentMethodModels
@if (Model != null)
{
    <div class="div-child">
        <div class="form-group">
            <div class="col-md-7 col-sm-7 col-xs-12">
                @Html.Hidden(string.Format("ListChild[{0}].OffSet", Model.OffSet), Model.OffSet)
                @Html.Hidden(string.Format("ListChild[{0}].ID", Model.OffSet), Model.ID)
                @Html.Hidden(string.Format("ListChild[{0}].Status", Model.OffSet), Model.Status, new { @class = "GroupStatus" })
                @Html.Hidden(string.Format("ListChild[{0}].ImageURL", Model.OffSet), Model.ImageURL)
                @Html.TextBox(string.Format("ListChild[{0}].Name", Model.OffSet), Model.Name, new { @class = "form-control", @placeholder = "Sub Payment Method Name" })
                @Html.ValidationMessage(string.Format("ListChild[{0}].Name", Model.OffSet), null, new { @class = "label label-danger" })
            </div>
            <div class="col-md-1 col-sm-1 col-xs-12">
                <a href="javascript:void(0)" onclick="DeleteTabPanel(this); return false;" style="font-size:28px; color:red;">
                    <i class="fa fa-trash-o"></i>
                </a>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 col-sm-2 col-xs-12">Image</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @*Image Placeholder*@
                @if (!string.IsNullOrEmpty(Model.ImageURL))
                {
                    <img id="upload-preview_@Model.OffSet" src="@Model.ImageURL" height="50" width="100" />
                }
                else
                {
                    <img id="upload-preview_@Model.OffSet" src="@Commons.Image100_50" height="50" width="100" />
                }
                @*load image*@
                <label class="btnFile" style="display:inline-block; border:1px solid #808080; cursor:pointer; padding: 6px 9px; border-radius:5%">
                    Add/Edit
                    @Html.TextBox(string.Format("ListChild[{0}].PictureUpload", Model.OffSet), Model.PictureUpload, new { @id = "PictureUpload", @type = "file", @onchange = "PreviewImage(this,\"upload-preview_" + Model.OffSet + "\")", @accept = "*.jpg", @style = "display:none" })
                </label>
                @Html.ValidationMessage(string.Format("ListChild[{0}].IsActive", Model.OffSet), null, new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 col-sm-2 col-xs-12">Active</label>
            <div class="col-md-3 col-sm-3 col-xs-12">
                @Html.CheckBox(string.Format("ListChild[{0}].IsActive", Model.OffSet), Model.IsActive, new { @class = "js-switch-chk" })
                @Html.ValidationMessage(string.Format("ListChild[{0}].IsActive", Model.OffSet), null, new { @class = "label label-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 col-sm-2 col-xs-12">Integration Code</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBox(string.Format("ListChild[{0}].IntegrationCode", Model.OffSet), Model.IntegrationCode, new { @class = "form-control", @placeholder = "Integration Code" })
                @Html.ValidationMessage(string.Format("ListChild[{0}].IntegrationCode", Model.OffSet), null, new { @class = "label label-danger" })
            </div>
        </div>
        <div class="col-md-8 col-sm-8 col-xs-12" style="border-bottom:1px solid #ccc;margin-bottom:2%;margin-top:2%"></div>
    </div>
}

<script src="@Url.Content("~/build/js/customInput.js")"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('input.flat').iCheck({
            checkboxClass: 'icheckbox_flat-green',
            radioClass: 'iradio_flat-green'
        });
    });
</script>