@model NSCSC.Shared.Models.CRM.Support.SupportViewModels
@{
    ViewBag.Title = "Support System";
}
@section Styles{
    <link rel="stylesheet" href='@Url.Content("~/vendors/chatSocketAchex/chatSocketAchex.css")'>
}

<div role="main" class="right_col">
    <div class="se-pre-con" style="display: none;"></div>
    <div class="">
        <div class="page-title">
            <div class="title_left" style="padding: 10px 0px;">
                @Html.Partial("~/Views/Shared/_breadcrumb.cshtml",
                        new Dictionary<string, string> { { "A", "CRM" }, { "B", "Support System" }, { "C", "View Data" } })
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_content">
                    @using (Html.BeginForm("Search", "CRMSupport", FormMethod.Post, new { @class = "form-horizontal search-form" }))
                    {
                    }
                    <div class="gridview">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="detail-view" style="height:100%;">
        <!-- detail partial view -->
    </div>
</div>

@section Scripts{

    <script src="@Url.Content("~/vendors/chatSocketAchex/chatSocketAchex.js")"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#ltrNetworkingFail').hide();
            $('#ltrNetworkingSuccess').hide();
        });

        $(function () {
            Search();
        });
        /*check Connection for Page*/
        setInterval(function () {
            if (!navigator.onLine) {
                $('#ltrNetworkingFail').show();
                $('#ltrNetworkingSuccess').hide();
            } else {
                $('#ltrNetworkingFail').hide();
                $('#ltrNetworkingSuccess').show();
            }
        }, 10000);
    </script>
}